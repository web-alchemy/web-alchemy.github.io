<!DOCTYPE html>
<html class="page {{ className }}" lang="{{ lang }}">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    <link rel="icon" href="/favicon.ico">
    <link rel="icon" href="/icon.svg" type="image/svg+xml" sizes="any">
    <link rel="apple-touch-icon" href="/icon-180.png">
    <link rel="manifest" href="/site.webmanifest">
    @if($slots.head)
      {{{ await $slots.head() }}}
    @endif
  </head>
  <body class="page__body">
    @if($slots.header)
      {{{ await $slots.header({ classes: 'page__header' }) }}}
    @endif

    @if($slots.main)
      {{{ await $slots.main({ classes: 'page__main' }) }}}
    @endif

    @if($slots.footer)
      {{{ await $slots.footer({ classes: 'page__footer' }) }}}
    @endif
  </body>
</html>